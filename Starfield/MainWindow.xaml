        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState="Maximized"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="canvas" Background="Black" Width="auto" Height="auto">

        </Canvas>
        <Label Name="fpsCounter2" HorizontalAlignment="Left" Foreground="White" VerticalAlignment="Top" FontFamily="Consolas" Margin="0,15,0,0" />
        <Slider Minimum="128.0" Maximum="500.0" Value="500" ClipToBounds="True" IsDirectionReversed="True" ValueChanged="Slider_ValueChanged" VerticalAlignment="Bottom" Margin="10,0"/>
