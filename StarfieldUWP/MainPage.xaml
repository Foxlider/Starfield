<Page
    x:Class="StarfieldUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Canvas x:Name="canvas" Background="Black" Width="auto" Height="auto">

        </Canvas>
        <TextBlock Name="fpsCounter" HorizontalAlignment="Left" Foreground="White" VerticalAlignment="Top" FontFamily="Consolas" />
        <TextBlock Name="fpsCounter2" HorizontalAlignment="Left" Foreground="White" VerticalAlignment="Top" FontFamily="Consolas" Margin="0,15,0,0" />
        <Slider Minimum="128.0" Maximum="500.0" Value="500" ValueChanged="Slider_ValueChanged"  VerticalAlignment="Bottom"/>
    </Grid>
</Page>
